<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FormMovimientoActivity">

    <Button
        android:id="@+id/btnRegistroMovimiento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="68dp"
        android:layout_marginBottom="136dp"
        android:text="GUARDAR"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/spnTipo" />

    <EditText
        android:id="@+id/etMonto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="264dp"
        android:ems="10"
        android:inputType="number"
        android:text="Monto:"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etMotivo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Motivo:"
        app:layout_constraintStart_toStartOf="@+id/etMonto"
        app:layout_constraintTop_toBottomOf="@+id/etMonto" />

    <EditText
        android:id="@+id/etLong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="27dp"
        android:text="Longitud"
        app:layout_constraintBaseline_toBaselineOf="@+id/etLat"
        app:layout_constraintStart_toStartOf="@+id/spnTipo" />

    <EditText
        android:id="@+id/etLat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="26dp"
        android:layout_marginTop="37dp"
        android:text="Latitud:"
        app:layout_constraintStart_toEndOf="@+id/etLong"
        app:layout_constraintTop_toBottomOf="@+id/etMotivo" />

    <Spinner
        android:id="@+id/spnTipo"
        android:layout_width="0dp"
        android:layout_height="32dp"
        android:layout_marginStart="73dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="73dp"
        android:layout_marginBottom="70dp"
        app:layout_constraintBottom_toBottomOf="@+id/btnRegistroMovimiento"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/etLong" />
</androidx.constraintlayout.widget.ConstraintLayout>